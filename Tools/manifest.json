{
    "name": "发卡助手",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "发卡 chrome 助手",
    "browser_action": {
        "default_title": "发卡助手",
        "default_icon": "icon.png",
        "default_popup": "view/popup.html"
    },
    "options_page": "view/options.html",
    "permissions": [
        "tabs",
        "notifications",
        "webRequest",
        "downloads",
        "contextMenus",
        "clipboardRead",
        "history",
        "https://*/*",
        "http://*/*"
    ],
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "chrome_url_overrides": {
        "newtab": "view/tab.html"
    },
    "background": {
        "scripts": [
            "js/lib/jquery-3.3.1.js",
            "js/background/weibo.js",
            "js/background/liveOnTab.js",
            "js/background/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/lib/jquery-3.3.1.js",
                "js/content-scripts/util.js",
                "js/content-scripts/bilibili.js",
                "js/content-scripts/weibo.js",
                "js/content-scripts/huaban.js",
                "js/content-scripts/pixiv.js",
                "js/content-scripts/baiduyun.js",
                "js/content-scripts/douyu.js",
                "js/content-scripts/altSelect.js",
                "js/content-scripts/index.js"
            ],
            "css": [
                "css/insert.css"
            ]
        }
    ]
}
