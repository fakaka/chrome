{
    "name": "打投组贴心小马甲",
    "version": "0.7.0",
    "manifest_version": 2,
    "description": "Chrome浏览器的小马甲",
    // "update_url": "http://138.128.223.28:3000/",
    "browser_action": {
        "default_title": "发卡~",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs",
        "notifications",
        "cookies",
        "webRequest",
        "downloads",
        "contextMenus"
    ],
    "icons": {
        "16": "icon.png",
        "48": "img/icon_48.png"
    },
    "background": {
        "scripts": [
            "js/jquery-2.2.0.min.js",
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://weibo.com/*",
                "*://chart.weibo.com/*",
                "*://*.baidu.com/*",
                "*://www.xunyee.cn/*",
                "*://www.bilibili.com/*"
            ],
            "js": [
                "js/jquery-2.2.0.min.js",
                "js/content-script.js",
                "js/rank.js",
                "js/baike.js",
                "js/xunyee.js",
                "js/tieba.js",
                "js/forward.js",
                "js/controller.js"
            ]
        }
    ]
}