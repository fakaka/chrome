{
    // "update_url": "http://localhost:8080/extension/manifest.xml",
    "name": "微博转发",
    "version": "0.2",
    "manifest_version": 2,
    "description": "微博小助手V2",
    "browser_action": {
        "default_title": "发卡~~",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "cookies",
        "*://*/*",
        "https://*/*",
        "http://*/*"
    ],
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://weibo.com/*"
            ],
            "js": [
                "js/jquery-2.2.0.min.js",
                "js/forward.js",
                "js/comment.js",
                "js/controller.js"
            ]
        }
    ]
}